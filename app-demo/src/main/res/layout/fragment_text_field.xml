<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <TextView
        style="@style/Text.HeadlineLarge"
        android:text="TextFields" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="48dp"
        android:paddingEnd="48dp">

        <mobi.lab.components.textfield.LabTextField
            android:id="@+id/text_field_no_icons"
            style="@style/Widget.Lab.TextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginBottom="@dimen/margin_default"
            android:hint="Label"
            app:errorEnabled="true">

            <mobi.lab.components.textfield.LabTextFieldEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </mobi.lab.components.textfield.LabTextField>

        <mobi.lab.components.textfield.LabTextField
            android:id="@+id/text_field_start_icon"
            style="@style/Widget.Lab.TextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginBottom="@dimen/margin_default"
            android:hint="Label"
            app:errorEnabled="true"
            app:startIconDrawable="@drawable/ic_clear">

            <mobi.lab.components.textfield.LabTextFieldEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </mobi.lab.components.textfield.LabTextField>


        <mobi.lab.components.textfield.LabTextField
            android:id="@+id/text_field_end_icon"
            style="@style/Widget.Lab.TextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginBottom="@dimen/margin_default"
            android:hint="Label"
            app:errorEnabled="true"
            app:endIconMode="clear_text">

            <mobi.lab.components.textfield.LabTextFieldEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </mobi.lab.components.textfield.LabTextField>

        <mobi.lab.components.textfield.LabTextField
            android:id="@+id/text_field_both_icons"
            style="@style/Widget.Lab.TextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginBottom="@dimen/margin_default"
            android:hint="Label"
            app:errorEnabled="true"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_clear"
            app:startIconDrawable="@drawable/ic_clear">

            <mobi.lab.components.textfield.LabTextFieldEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </mobi.lab.components.textfield.LabTextField>

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switch_enabled"
            style="@style/Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Enabled"
            android:checked="true" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switch_error"
            style="@style/Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Show error"
            android:checked="false" />

        <TextView
            style="@style/Text.HeadlineMedium"
            android:text="Customise TextFields" />

        <mobi.lab.components.textfield.LabTextField
            android:id="@+id/input_helper"
            style="@style/Widget.Lab.TextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginBottom="@dimen/margin_default"
            android:hint="Change helper text">

            <mobi.lab.components.textfield.LabTextFieldEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </mobi.lab.components.textfield.LabTextField>

        <mobi.lab.components.textfield.LabTextField
            android:id="@+id/input_error"
            style="@style/Widget.Lab.TextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginBottom="@dimen/margin_default"
            android:hint="Change error text">

            <mobi.lab.components.textfield.LabTextFieldEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </mobi.lab.components.textfield.LabTextField>

        <mobi.lab.components.textfield.LabTextField
            android:id="@+id/input_label"
            style="@style/Widget.Lab.TextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginBottom="@dimen/margin_default"
            android:hint="Change label text"
            android:text="Label">

            <mobi.lab.components.textfield.LabTextFieldEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </mobi.lab.components.textfield.LabTextField>

        <mobi.lab.components.textfield.LabTextField
            android:id="@+id/input_placeholder"
            style="@style/Widget.Lab.TextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginBottom="@dimen/margin_default"
            android:hint="Change placeholder text">

            <mobi.lab.components.textfield.LabTextFieldEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </mobi.lab.components.textfield.LabTextField>

        <mobi.lab.components.textfield.LabTextField
            android:id="@+id/input_prefix"
            style="@style/Widget.Lab.TextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginBottom="@dimen/margin_default"
            android:hint="Change prefix text">

            <mobi.lab.components.textfield.LabTextFieldEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </mobi.lab.components.textfield.LabTextField>

        <mobi.lab.components.textfield.LabTextField
            android:id="@+id/input_suffix"
            style="@style/Widget.Lab.TextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginBottom="@dimen/margin_default"
            android:hint="Change suffix text">

            <mobi.lab.components.textfield.LabTextFieldEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </mobi.lab.components.textfield.LabTextField>

        <mobi.lab.components.textfield.LabTextField
            android:id="@+id/input_counter_max"
            style="@style/Widget.Lab.TextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginBottom="32dp"
            android:hint="Change counter maximum">

            <mobi.lab.components.textfield.LabTextFieldEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:imeOptions="actionDone" />
        </mobi.lab.components.textfield.LabTextField>

        <mobi.lab.components.button.LabButton
            android:id="@+id/button_update"
            style="@style/Widget.Lab.Button.Filled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginBottom="72dp"
            android:layout_gravity="center_horizontal"
            android:text="Update" />

    </LinearLayout>
</LinearLayout>
